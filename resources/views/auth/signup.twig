{% extends 'templates/app.twig' %}

{% block content %}
	
    <div class="row">
    	<div class="col-md-6 col-md-offset-3">
    		<div class="panel panel-default">
    			<div class="panel-heading">注册新用户</div>
    			<div class="panel-body">
    				<form action="{{ path_for('auth.signup') }}" method="post" class="layui-form">
    					<div class="form-group{{ errors.username ? ' has-error' : '' }}">
    						<label for="username">用户名</label>
    						<input type="text" name="username" lay-verify="required" id="username" placeholder="请输入用户名" class="form-control" value="{{ old.username }}">
                            {% if errors.username %}
                            <span class="hel-block">{{ errors.username | first }}</span>
                            {% endif %}
    					</div>

    					<div class="form-group{{ errors.password ? ' has-error' : '' }}">
    						<label for="password">密码</label>
    						<input type="password" name="password" lay-verify="password" id="password" class="form-control" placeholder="请输入密码" value="{{ old.password }}" >
                            {% if errors.password %}
                            <span class="hel-block">{{ errors.password | first }}</span>
                            {% endif %}
    					</div>
						<div class="form-group{{ errors.transpasswd ? ' has-error' : '' }}">
    						<label for="transpasswd">二级密码</label>
    						<input type="password" name="transpasswd" lay-verify="required" id="transpasswd" class="form-control" placeholder="请输入二级密码" value="{{ old.transpasswd }}" >
                            {% if errors.transpasswd %}
                            <span class="hel-block">{{ errors.transpasswd | first }}</span>
                            {% endif %}
    					</div>
                        <div class="form-group{{ errors.mobile ? ' has-error' : '' }}">
                            <label for="mobile">手机号</label>
                            <input type="text" name="mobile" id="mobile" lay-verify="phone" class="form-control" placeholder="请输入手记号" value="{{ old.mobile }}">
                            {% if errors.mobile %}
                            <span class="hel-block">{{ errors.mobile | first }}</span>
                            {% endif %}
                        </div>
    					<div class="form-group{{ errors.tjr ? ' has-error' : '' }}">
    						<label for="tjr">邀请人</label>
    						<input type="text" lay-verify="required" name="tjr" id="tjr" class="form-control" value="{{ old.tjr }}">
                            {% if errors.tjr %}
                            <span class="hel-block">{{ errors.tjr | first }}</span>
                            {% endif %}
    					</div>
						<button type="submit" lay-submit lay-filter='frm1' class="btn btn-default">注册</button>

                        {{ csrf.field | raw }}
    				</form>
    			</div>
    		</div>
    	</div>
    </div>
{% endblock %}


{% block js%}
<script src="/assets/layui/layui.js"></script>

<script>
	layui.use(['form'],function(){
		var form = layui.form();
		
	});
</script>
{% endblock %}