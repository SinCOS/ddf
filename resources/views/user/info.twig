{% set title %}
    基本信息
{% endset %}
{% extends 'user/layout.twig' %}


 {% block content %}
 <div class="am-g">
        <div class="am-u-sm-12 am-u-md-4 am-u-md-push-8">
          <div class="am-panel am-panel-default">
            <div class="am-panel-bd">
              <div class="am-g">
                <div class="am-u-md-4">
                  <img class="am-img-circle am-img-thumbnail" src="http://s.amazeui.org/media/i/demos/bw-2014-06-19.jpg?imageView/1/w/200/h/200/q/80" alt=""/>
                </div>
                <div class="am-u-md-8">
                  <p>你可以使用<a href="#">gravatar.com</a>提供的头像或者使用本地上传头像。 </p>
                  <form class="am-form">
                    <div class="am-form-group">
                      <input type="file" id="user-pic">
                      <p class="am-form-help">请选择要上传的文件...</p>
                      <button type="button" class="am-btn am-btn-primary am-btn-xs">保存</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>

          <div class="am-panel am-panel-default">
            <div class="am-panel-bd">
              <div class="user-info">
                <p>等级信息</p>
                <div class="am-progress am-progress-sm">
                  <div class="am-progress-bar" style="width: 60%"></div>
                </div>
                <p class="user-info-order">当前等级：<strong>LV8</strong> 活跃天数：<strong>587</strong> 距离下一级别：<strong>160</strong></p>
              </div>
              <div class="user-info">
                <p>信用信息</p>
                <div class="am-progress am-progress-sm">
                  <div class="am-progress-bar am-progress-bar-success" style="width: 80%"></div>
                </div>
                <p class="user-info-order">信用等级：正常当前 信用积分：<strong>80</strong></p>
              </div>
            </div>
          </div>

        </div>
        
        <div class="am-u-sm-12 am-u-md-8 am-u-md-pull-4">
          <form class="am-form am-form-horizontal layui-form" method="POST">
            <div class="am-form-group">
              <label for="user-name" class="am-u-sm-3 am-form-label">昵称</label>
              <div class="am-u-sm-9">
                <input type="text" id="user-name" placeholder="姓名" readonly value="{{ user.username }}">
              </div>
            </div>
            <div class="am-form-group">
              <label for="user-name" class="am-u-sm-3 am-form-label">真实姓名</label>
              <div class="am-u-sm-9">
                <input type="text" name='realname' placeholder="姓名" lay-verify='required' value="{{ user.realname }}">
                <small>输入你的名字，让我们记住你。</small>
              </div>
            </div>
            <div class="am-form-group">
              <label for="user-email" class="am-u-sm-3 am-form-label">微信</label>
              <div class="am-u-sm-9">
                <input type="text" name='weixin' placeholder="输入你的微信号" lay-verify='required' value="{{ user.weixin }}">
                <small>微信号你懂得...</small>
              </div>
            </div>

            <div class="am-form-group">
              <label for="user-phone" class="am-u-sm-3 am-form-label">电话 </label>
              <div class="am-u-sm-9">
                <input type="text" name='mobile' placeholder="输入你的电话号码 " lay-verify='mobile' value="{{ user.mobile }}">
              </div>
            </div>

          
            <div class="am-form-group">
              <div class="am-u-sm-9 am-u-sm-push-3">
                <button type="button" class="am-btn am-btn-primary" lay-submit lay-filter='frm1' >保存修改</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>


{% endblock %}


{% block js %}
<script src='/assets/layui/layui.js'></script>
<script>
    layui.use(['form','layer'],function(){
        var form = layui.form();
        form.on('submit(frm1)',function(data){
            $.post('/user/info',data.field,function(data){
                alert('保存成功');
                window.location = window.location;
            },'json').fail(function(){
                alert('保存失败');
            });
            return false;;
        });
    })
</script>

{% endblock %}