{% set title %}
    银行卡信息
{% endset %}
{% extends 'user/layout.twig' %}


 {% block content %}
 <div class="am-g">
        <div class="am-u-sm-12 am-u-md-8">
          <form class="am-form am-form-horizontal layui-form" >
            <div class="am-form-group">
              <label for="user-name" class="am-u-sm-3 am-form-label">密码</label>
              <div class="am-u-sm-9">
                <input type="password"  placeholder="请输入密码" name='password' value="" lay-verify='required'>
              </div>
            </div>
             <div class="am-form-group">
              <label for="user-name" class="am-u-sm-3 am-form-label">交易密码</label>
              <div class="am-u-sm-9">
                <input type="password" name="transpasswd" placeholder="请输入交易密码"  value="" lay-verify='required'>
              </div>
            </div>
            <div class="am-form-group">
              <div class="am-u-sm-9 am-u-sm-push-3">
                
                <button type="button" class="am-btn am-btn-primary" lay-filter='frm1' lay-submit>保存修改</button>
                
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>


{% endblock %}


{% block js %}
<script src='/assets/layui/layui.js'></script>
<script>
    layui.use(['form','layer'],function(){
        var form = layui.form();
        form.on('submit(frm1)',function(data){
          $.post('/user/resetpasswd',data.field,function(json){
              layui.layer.msg(json);
          }).error(function(resp){
              console.log(resp);
          });
          return false;
        });
    })
</script>
{% endblock %}

