{%if paginator.hasPages() %} 
 <div class="am-margin am-cf">
        <hr/>
        <!-- <p class="am-fl">共 15 条记录</p> -->
        <ol class="am-pagination am-fr">
         @if ($paginator->onFirstPage())
          <li class="am-disabled"><a href="#">&laquo;</a></li>
          @else
           <li class="am-disabled"><a href="{{ $paginator->previousPageUrl() }}">&laquo;</a></li>
           @endif
        @foreach ($elements as $element)
            {{-- "Three Dots" Separator --}}
            @if (is_string($element))
                <li class="am-disabled"><span>{{ $element }}</span></li>
            @endif

            {{-- Array Of Links --}}
            @if (is_array($element))
                @foreach ($element as $page => $url)
                    @if ($page == $paginator->currentPage())
                        <li class="am-active"><span>{{ $page }}</span></li>
                    @else
                        <li><a href="{{ $url }}">{{ $page }}</a></li>
                    @endif
                @endforeach
            @endif
        @endforeach
     @if ($paginator->hasMorePages())

            <li><a href="{{ $paginator->nextPageUrl() }}" rel="next">&raquo;</a></li>
        @else
            <li class="am-disabled"><span>&raquo;</span></li>
        @endif
         
        </ol>
      </div>
@endif